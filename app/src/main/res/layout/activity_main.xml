<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BaseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="0dp"
    tools:context=".WaitingRoomActivity">

    <!-- 나의 페이지로 넘어가는 버튼 생성 -->

    <!-- 내가 해야하는 회의 참여를 알려주는 텍스트 -->

    <!-- 코드 입력할 때 보이는 배경화면  -->

    <!-- 참여코드 입력창 -->

    <!-- 대기실에 들어갈 수 있는 버튼  -->

    <!-- 회의 생성 할 때 보이는 배경화면 및 버튼  -->

    <!-- 임시 배경화면1 -->

    <!-- 임시 배경화면2 -->

    <!-- 회의 생성 할 때 글씨 보여주는 배경화면 -->

    <!-- 회의생성 텍스트 -->

    <!-- 회의생성에 대해 어느정도 알려주는 정보창 -->
    <!-- "텍스트로 빠르고 간편하게\n 회의를 생성해보세요." <= 문단 나누기 -->

    <!-- 회의 예약 할 때 보이는 배경화면 및 버튼  -->

    <!-- 임시 배경화면 -->

    <!-- 회의 예약 할 때 글씨 보여주는 배경화면 -->

    <!-- 회의예약 텍스트 -->

    <!-- 회의예약에 대해 어느정도 알려주는 정보창 -->
    <!-- "회의를 예약해두면 잊지 않게\n 알림을 보내드립니다." <= 문단 나누기 -->

    <!-- 내 회의를 알려주는 텍스트 -->

    <!-- 카드메뉴를 보여주는 뷰페이저 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30.67dp"
        android:layout_marginTop="33.33dp"
        app:layout_constraintBottom_toTopOf="@+id/main_functions"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="31dp">

        <TextView
            android:id="@+id/speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43.33dp"
            android:layout_marginBottom="15.33dp"
            android:text="@string/mainpage_text1"
            android:textColor="#000000"
            android:textSize="20.00sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/createSet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_page"
            android:layout_width="43.33dp"
            android:layout_height="43.33dp"
            android:src="@mipmap/avatar_foreground"
            app:civ_border_color="#707070"
            app:civ_border_width="0.1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/createSet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/invitation_code"
                android:layout_width="256.67dp"
                android:layout_height="33.33dp"
                android:layout_marginRight="8.67dp"
                android:background="@drawable/chatting_background"
                android:hint="@string/input_hint"
                android:paddingHorizontal="6.67dp"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/goto_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/goto_btn"
                android:layout_width="33.33dp"
                android:layout_height="33.33dp"
                android:adjustViewBounds="true"
                android:background="@drawable/button_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_functions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingHorizontal="30.67dp"
        android:paddingTop="13.33dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FDF6E6"
            app:cardCornerRadius="6.67dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reservation_background"
                android:layout_width="144.33dp"
                android:layout_height="231.33dp">

                <ImageView
                    android:id="@+id/inmain_ground2"
                    android:layout_width="71dp"
                    android:layout_height="113.53dp"
                    app:layout_constraintBottom_toTopOf="@+id/reservation_fontground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.506"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/inmain2" />

                <LinearLayout
                    android:id="@+id/reservation_fontground"
                    android:layout_width="match_parent"
                    android:layout_height="71.33dp"
                    android:background="@drawable/main_background_white"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingHorizontal="8.33dp"
                    android:paddingVertical="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/make_subject2"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:text="회의 예약"
                        android:textColor="#000000"
                        android:textSize="15.33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/make_object2"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:text="회의를 예약해두면 잊지 않게\n알림을 보내드립니다."
                        android:textSize="8sp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#E6EAFD"
            app:cardCornerRadius="6.67dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/make_background"
                android:layout_width="144.33dp"
                android:layout_height="231.33dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="52.33dp"
                    android:layout_height="111.13dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginRight="8.73dp"
                    app:layout_constraintBottom_toTopOf="@+id/make_fondground"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/inmain1_1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="57.23dp"
                    android:layout_height="111.13dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/make_fondground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:srcCompat="@drawable/inmain1_2"/>

                <LinearLayout
                    android:id="@+id/make_fondground"
                    android:layout_width="match_parent"
                    android:layout_height="71.33dp"
                    android:background="@drawable/main_background_white"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingHorizontal="8.33dp"
                    android:paddingVertical="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/make_subject"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:text="@string/make_text"
                        android:textColor="#000000"
                        android:textSize="15.33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/make_object"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:text="텍스트로 빠르고 간편하게\n회의를 생성해보세요."
                        android:textSize="8sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.67dp"
        android:layout_marginBottom="33.33dp"
        android:paddingBottom="16.67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_functions">

        <TextView
            android:id="@+id/my_conference"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/mainpage_text2"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="133.33dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="8.67dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_conference">

        </androidx.viewpager.widget.ViewPager>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>