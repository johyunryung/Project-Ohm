<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--내가 사용하고 있는 이름 -->
    <!--사용자가 지정해야기 때문에 텍스트를 작성 안 했습니다 ! -->
    <TextView
        android:id="@+id/chat_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_vertical"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textSize="@dimen/sp9.67"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <!--사용자가 지정해야기 때문에 텍스트를 작성 안 했습니다 ! -->
    <TextView
        android:id="@+id/chat_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/sp11"
        android:background="@drawable/chat_bubble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp13.33"
        android:layout_marginEnd="@dimen/dp13.33"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8.67"
        app:layout_constraintTop_toBottomOf="@+id/chat_nickname" />
</androidx.constraintlayout.widget.ConstraintLayout>