<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".password_find">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="89dp"
        android:gravity="center_horizontal"
        android:text="비밀번호 찾기"
        android:textColor="#000000"
        android:textSize="60px"
        app:layout_constraintBottom_toTopOf="@+id/show_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:layout_marginBottom="37dp"
        android:text="이메일"
        android:scrollHorizontally="true"
        android:textColor="#000000"
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/show_email"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/temporary_password_button"
        android:layout_width="286dp"
        android:layout_height="62dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="332dp"
        android:backgroundTint="#D6D6D6"
        android:stateListAnimator="@null"
        android:text="임시 비밀번호 발급"
        android:textColor="#FFFFFF"
        android:textSize="40px"
        app:backgroundTint="#F6F6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_email"
        tools:ignore="MissingConstraints,OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>

