<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D000000"
    tools:context=".end_room_dialog"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="259.33dp"
        android:layout_height="173.33dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="정말 회의를 종료하시겠습니까?\n지금까지 대화한 내용이 모두 사라집니다."
            android:textColor="#000000"
            android:textSize="13.33sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/end_button"
            android:layout_width="60.00dp"
            android:layout_height="25.00dp"
            android:layout_marginStart="61.33dp"
            android:layout_marginTop="105.67dp"
            android:layout_marginEnd="199dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/dialog_yes"
            android:text="종료"
            android:textColor="#FFFFFF"
            android:textSize="12.00sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="60.00dp"
            android:layout_height="25.00dp"
            android:layout_marginStart="20.00dp"
            android:layout_marginTop="105.67dp"
            android:layout_marginEnd="42.67dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/dialog_no"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textSize="12.00sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/end_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>