<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BaseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="30.67dp"
    android:layout_marginVertical="33.33dp"
    android:paddingHorizontal="0dp"
    tools:context=".WaitingRoomActivity">

    <ImageButton
        android:id="@+id/back_btn_nickname_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_toback" />

    <Button
        android:id="@+id/next_btn_nickname_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="다음"
        android:textColor="#000000"
        android:textSize="13.33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h3_nickname_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104.33dp"
        android:gravity="center"
        android:text="여러분만의 닉네임을 설정해주세요!"
        android:textColor="#000000"
        android:textSize="13.33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_nickname_set"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="79.67dp"
        android:background="@drawable/info_input"
        android:ems="10"
        android:hint="2자 이상 10자 이하"
        android:inputType="textPersonName"
        android:padding="5.67dp"
        android:textAlignment="center"
        android:textColorHint="#C2C2C2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h3_nickname_set" />

    <TextView
        android:id="@+id/desc_nickname_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="타인에게 불쾌감을 주는 닉네임은 제한당할 수 있습니다."
        android:textColor="#414347"
        android:textSize="8.67sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nickname_set" />
</androidx.constraintlayout.widget.ConstraintLayout>